<h2>All Products</h2>
<a href="/admin/products/new" class="btn btn-success mb-3">Add Product</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><img src="/uploads/<%= product.image %>" width="50" /></td>
        <td><%= product.title %></td>
        <td>$<%= product.price %></td>
        <td><%= product.stock %></td>
        <td>
          <a href="/admin/products/<%= product._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <form action="/admin/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

