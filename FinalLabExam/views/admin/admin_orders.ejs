<!DOCTYPE html>
<html>
<head>
    <title>Admin Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
    <h2>Admin Panel - Orders</h2>
    <div class="accordion" id="ordersAccordion">
        <% orders.forEach((order, index) => { %>
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading<%= index %>">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                        Order by <%= order.name %> - $<%= order.totalAmount %> - <%= new Date(order.createdAt).toLocaleString() %>
                    </button>
                </h2>
                <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#ordersAccordion">
                    <div class="accordion-body">
                        <p><strong>Email:</strong> <%= order.email %></p>
                        <p><strong>Address:</strong> <%= order.address %></p>
                        <p><strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleString() %></p>
                        <ul class="list-group">
                            <% order.cart.forEach(item => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6><%= item.name %></h6>
                                        <p>Price: $<%= item.price %> x <%= item.quantity %></p>
                                    </div>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
